// 不使用外键

// todo 重构命名方式，clean all table

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

// 用户表
model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  pwd String
  username String ?
  bio String ?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

// 好友列表，一个好友关系需要insert两次
model Friend {
  id Int @id @default(autoincrement())
  uid Int
  friendId Int
  friendAlias String @default("")  // 好友备注
  status Int @default(0) // 好友状态，0: 正常 1: 删除
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  
  @@unique(fields: [uid, friendId], name: "uidAndFriendIdIdx")
}

// 添加好友请求
model FriendRequest {
  id Int @id @default(autoincrement())
  fromUid Int
  toUid Int
  status Int // 请求状态，0: 通过   1: 拒绝   2: Pending
  content String @default("") // 打招呼内容
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  @@unique(fields:[fromUid, toUid], name: "fromUidAndtoUidIdx")
}

// 消息实体表
model Message {
  id Int @id @default(autoincrement())
  fromUid Int // 发送者
  toUid Int // 接受者
  content String // 消息实体
  msgType Int // 消息类型，-1:系统消息 0:点对点 1:群发
  channelId Int ? // 消息所属频道，仅在msg_type=1时使用
  pushed Boolean // 是否成功推送（基于4个报文实现消息可靠推送）
  read Boolean // 是否已读（暂时不实现）
  createdAt DateTime @default(now()) // 创建时间 
  updatedAt DateTime @default(now()) @updatedAt // 创建时间
  @@index(fields: [fromUid, toUid], name: "fromUidAndtoUidIdx")
  @@index(fields: [toUid, fromUid], name: "toUidAndFromUidIdx")
}

// 频道列表
model Channel {
  id Int @id @default(autoincrement())
  name String // 频道名称
  desc String // 频道描述
  uidList String // 加入者Id json array
  ownerUid Int // 拥有者iUd
  createdAt DateTime @default(now()) // 创建时间
  updatedAt DateTime @default(now()) @updatedAt
  @@index(fields: [ownerUid], name: "ownerUidIdx")
}